---
import LeftSection from './blocks/LeftSection.astro'
import RightSection from './blocks/RightSection.astro'

const { blogs } = Astro.props

---


{
    // @ts-ignore
    blogs.map((b, index) => index % 2 === 0
        ? (
            <LeftSection
                title={b.title}
                subTitle={b.summary}
                btnExists={true}
                btnTitle="阅读更多"
                btnURL={`/posts/detail/${b.id}`}
                img={b.cover}
                imgAlt={b.title}
            />
        )
        : (
            <RightSection
                title={b.title}
                subTitle={b.summary}
                btnExists={true}
                btnTitle="阅读更多"
                btnURL={`/posts/detail/${b.id}`}
                img={b.cover}
                imgAlt={b.title}
                single={!b.cardImage2}
                imgOne={b.cover}
                imgOneAlt={b.title}
                imgTwo={b.cardImage2}
                imgTwoAlt={b.title}
            />
        ))
}
